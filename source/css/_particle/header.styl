#menu-outer {
    background-color: convert(hexo-config('toplab_background_color'));
    width: 100%;
    height: auto;
    position: fixed;
    padding-bottom: 10px;
    left: 0;
    top: 0;
    text-align: center;
    font-family: Ubuntu;
    box-shadow: 0px 5px 5px rgba(0, 0, 0, 0.8);
    transition: 0.3s linear;

    &:hover {
        box-shadow: 0px 10px 10px rgba(0, 0, 0, 0.8);
    }

    #blog_title p {
        font-size: convert(hexo-config('blog_title_size'));
        padding-left: 20%;
        padding-top: 10px;
        float: left;
    }

    #menu-inner {
        padding-top: 20px;

        a {
            padding-right: 20px;
            display: inline-block;
            color: black;
            text-decoration: none;
            transition: 0.3s linear;

            &:hover {
                color: convert(hexo-config('custom_color')) !important;
            }

            &:visited {
                color: black;
                text-decoration: none;
            }
        }
    }
}
