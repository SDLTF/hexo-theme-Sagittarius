@import '_particle/header.styl';
@import '_particle/posts.styl';
@import '_particle/article.styl';
@import '_particle/archives.styl';
@import '_particle/tags.styl';
@import '_particle/category.styl';
* {
  margin: 0;
  padding: 0;
}

body {
  width: 100%;
  min-height: 1000px;
  font-family: Ubuntu;
  background: rgba(245, 245, 245, 0.9);
  background-attachment: fixed;
  background-repeat: no-repeat;
  background-position: center center;
  background-size: cover;
}

::selection {
  color: #fff;
  background: convert(hexo-config('custom_color'));
}

@font-face {
  font-family: Ubuntu;
  src: url('../font/Ubuntu-R.ttf');
}

@font-face {
  font-family: UbuntuMono;
  src: url('../font/UbuntuMono-R.ttf');
}

p {
  font-size: 16px;
}

a {
  padding-right: 20px;
  display: inline-block;
  color: black;
  text-decoration: none;
  transition: 0.3s linear;

  &:hover {
    color: convert(hexo-config('custom_color'));
  }

  &:visited {
    color: black;
    text-decoration: none;
  }
}

hr {
  color: convert(hexo-config('custom_color'));
  width: 80%;
  margin-top: 15px;
  margin-bottom: 15px;
}

h1, h2, h3, h4, h5, h6 {
  border-left: 10px convert(hexo-config('custom_color')) solid;
  padding-bottom: 5px;
  margin-bottom: 10px;
  transition: 0.3s linear;
  padding-left: 10px;
}

h1 {
  font-size: 36px;

  &:hover {
    padding-left: 20px;
  }
}

h2 {
  font-size: 32px;

  &:hover {
    padding-left: 20px;
  }
}

h3 {
  font-size: 28px;

  &:hover {
    padding-left: 20px;
  }
}

h4, h5, h6 {
  font-size: 24px;

  &:hover {
    padding-left: 20px;
  }
}

hr {
  margin: 0 auto;
  width: 80%;
  margin-top: 50px;
  margin-bottom: 50px;
}

img {
  max-width;
}

ul, ol {
  margin: 10px 0;
  padding-left: 20px;
}

ul li {
  list-style: disc;
  margin: 5px 0;
}

ol li {
  list-style: decimal;
  margin: 5px 0;
}

pre, .highlight {
  background: #2d2d2d;
  margin: 1.6rem 0;
  padding: 0.8rem 0.8rem;
  border-style: solid;
  border-width: 1px 0;
  overflow: auto;
  color: #ccc;
  line-height: 20px;
}

.gutter {
  display: none;
}

.highlight .gutter pre {
  color: #666;
  font-size: 0.9rem;
}

code, pre {
  font-family: consolas;
}

code {
  background: rgba(99, 99, 99, 0.07);
  color: #ef459c;
  padding: 1px 2px;
  border-radius: 2px;
}

pre code {
  background: none;
  text-shadow: none;
  padding: 0;
}

blockquote {
  color: #656565;
  margin: 5px 5px 1.1em;
  border-left: 5px solid convert(hexo-config('custom_color'));;
  border-left-width: 6px;
  background-color: lighten(convert(hexo-config('custom_color')), 85%);
  border-top-right-radius: 5px;
  border-bottom-right-radius: 5px;
  padding: 15px 20px;
}

blockquote p {
  margin: 0;
}

table {
  margin: 15px 0;
  border-collapse: collapse;
  display: table;
  width: 100%;
  table-layout: fixed;
  word-wrap: break-word;
}

table tr {
  border-top: 1px solid #ccc;
  background-color: #fff;
}

table th, table td {
  border: 1px solid #ddd;
  padding: 6px 13px;
}

.highlight pre {
  border: none;
  margin: 0;
  padding: 0;
}

.highlight table {
  margin: 0;
  width: auto;
}

.highlight td {
  border: none;
  padding: 0;
}

.highlight tr {
  border: 0;
}

.highlight figcaption {
  font-size: 0.85em;
  color: #999;
  line-height: 1em;
  margin-bottom: 1em;
}

.highlight figcaption a {
  float: right;
}

.highlight .gutter pre {
  text-align: right;
  padding-right: 20px;
}

.highlight .line {
  height: 20px;
}

.video-container {
  position: relative;
  padding-bottom: 56.25%;
  padding-top: 25px;
  height: 0;
}

.video-container iframe {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

pre .comment, pre .title {
  color: #999;
}

pre .variable, pre .attribute, pre .tag, pre .regexp, pre .ruby .constant, pre .xml .tag, pre .title, pre .xml .pi, pre .xml .doctype, pre .html .doctype, pre .css .id, pre .css .class, pre .css .pseudo {
  color: #f2777a;
}

pre .number, pre .preprocessor, pre .built_in, pre .literal, pre .params, pre .constant {
  color: #f99157;
}

pre .class, pre .ruby .class .title, pre .css .rules .attribute {
  color: #99cc99;
}

pre .string, pre .value, pre .inheritance, pre .header, pre .ruby .symbol, pre .xml .cdata {
  color: #99cc99;
}

pre .css .hexcolor {
  color: #66cccc;
}

pre .function, pre .python .decorator, pre .python .title, pre .ruby .function .title, pre .ruby .title .keyword, pre .perl .sub, pre .javascript .title, pre .coffeescript .title {
  color: #6699cc;
}

pre .keyword, pre .javascript .function {
  color: #cc99cc;
}